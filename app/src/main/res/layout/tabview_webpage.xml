<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebViewPage">

    <LinearLayout
        android:id="@+id/mainLinLay"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/curve">

            <ImageView
                android:id="@+id/backImage"
                android:layout_width="40dp"
                android:layout_marginTop="-15dp"
                android:layout_height="match_parent"
                android:layout_gravity="top|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_arrow_back"
                android:onClick="onBackClicked"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="40dp"
                android:text="Health App"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#e4f5ef"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <ImageView
                android:id="@+id/previousPageImg"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="top|right"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="invisible"
                android:background="?attr/selectableItemBackground"
                />

            <LinearLayout
                android:id="@+id/step1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"

                android:background="?attr/selectableItemBackground"
                >

                <TextView
                    android:id="@+id/step1roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textview"
                    android:backgroundTint="#fff"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#9daba6"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/step1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Page 1"
                    android:textColor="#9daba6"
                    android:maxLines="4"
                    android:textSize="13sp"
                    android:onClick="step1Clicked"

                    android:background="?attr/selectableItemBackground"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"

                android:background="?attr/selectableItemBackground"
                >

                <TextView
                    android:id="@+id/step2roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textview"
                    android:backgroundTint="#fff"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#9daba6"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/step2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Page 2"
                    android:textColor="#9daba6"
                    android:textSize="13sp"
                    android:onClick="step2Clicked"
                    android:maxLines="4"

                    android:background="?attr/selectableItemBackground"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:id="@+id/step3roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textview"
                    android:backgroundTint="#fff"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#9daba6"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/step3Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Page 3"
                    android:textColor="#9daba6"
                    android:textSize="13sp"
                    android:onClick="step3Clicked"
                    android:maxLines="4"

                    android:background="?attr/selectableItemBackground"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/nextPageImg"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="top|right"
                android:src="@drawable/ic_navigate_next_black_24dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="invisible"

                android:background="?attr/selectableItemBackground"
                />

        </LinearLayout>
        <!--<TextView-->
            <!--android:id="@+id/test"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="hq"-->
            <!--android:textColor="@color/ms_black" />-->

<!--        <FrameLayout-->
<!--            android:id="@+id/fragContainer"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content" />-->
        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webview"
            android:layout_marginTop="5dp"
            />

        <!--<fragment-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:name="com.example.parkin.MyFragment.AddressFragment"-->
        <!--android:id="@+id/fragment"-->
        <!--/>-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>